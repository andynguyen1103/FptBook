@model BookViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<form asp-action="Delete" asp-route-id="@Model.BookId">
    <div class="form-group">
        <label asp-for="Tittle" class="control-label"></label>
        <input asp-for="Tittle" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Sumary" class="control-label"></label>
        <textarea asp-for="Sumary" class="form-control" disabled></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID" class="control-label"></label>
        <input asp-for="CategoryID" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="AuthorName" class="control-label"></label>
        <input asp-for="AuthorName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

