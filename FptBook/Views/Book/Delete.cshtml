@model Book

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<form asp-action="Delete" asp-route-id="@Model.BookId">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Summary" class="control-label"></label>
        <textarea asp-for="Summary" class="form-control" disabled></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category.Name" class="control-label"></label>
        <input asp-for="Category.Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Author.Name" class="control-label"></label>
        <input asp-for="Author.Name" class="form-control" disabled />
    </div>
    <div class="col-md-4">
        <img src="@Url.Content("~" + Model.ImageLink)" class="img-thumbnail" />
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
    
</form>

