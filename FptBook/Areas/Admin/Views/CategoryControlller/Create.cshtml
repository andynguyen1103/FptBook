@model FptBook.Areas.Admin.Models.CategoryViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h1>Create Category</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th> <br> <br>
                            <label asp-for="Name" class="control-label" style="font-size: 20px;"></label>
                        </th>
                        <td>
                            <input asp-for="Name" class="form-control" /> <br><br>
                            <span asp-validation-for="Name" class="text-danger"></span> <br><br>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div >
                <a class="back-to-list" asp-action="Index">Back to List</a>
                <button type="submit" class="save-button">Create</button>
            </div>
        </form>
    </div>
</div>


@section CSS
{
    <link href="@Url.Content("~/css/admin-mancate-create.css")" rel="stylesheet" type="text/css" />
}
