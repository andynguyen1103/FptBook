@model IEnumerable<FptBook.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h1>Manage Category</h1>
<a class="create-button" asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="edit-button" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> 
                <a class="detail-button" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> 
                <a class="delete-button" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section CSS
{
    <link href="@Url.Content("~/css/admin-manage-category.css")" rel="stylesheet" type="text/css" />
}