<h1>Category Request Details</h1>

<div>
    <form class="form-control">
        <table class="table table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <td>@Html.DisplayFor(model => model.CreatedAt)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IsApproved)</th>
                <td>@Html.DisplayFor(model => model.IsApproved)</td>
            </tr>
            @{
                if (Model.IsApproved.GetValueOrDefault())
                {
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ApprovedAt)</th>
                        <td>@Html.DisplayFor(model => model.ApprovedAt)</td>
                    </tr>
                }
            }
        </table>
    </form>
</div>




<div>
    @{
        if (!Model.IsApproved.GetValueOrDefault())
        {
            <a class="edit-button" asp-action="Edit" asp-route-id="@Model?.RequestId">Edit</a>
        }
    }
     <a class="back-to-list" asp-action="Index">Back to List</a>
</div>



