@model IEnumerable<FptBook.Models.CategoryRequest>

@{
    ViewData["Title"] = "Index";
}

    <h2>Category Request</h2>
    <a class="add-category" asp-action="Create">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApprovedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsApproved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    
                    <td>
                        <a class="detail-button" asp-action="Details" asp-route-id="@item.RequestId">Details</a>
                        @{
                            if (!item.IsApproved.GetValueOrDefault())
                            {
                                <a class="approve-button" asp-action="Approve" asp-route-id="@item.RequestId">Approve</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

@section CSS
{
    <link href="@Url.Content("~/css/admin-category-request.css")" rel="stylesheet" type="text/css" />
}