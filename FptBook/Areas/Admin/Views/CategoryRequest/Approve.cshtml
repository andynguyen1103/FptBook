<div class="row">
    <div class="col-md-4">
        <form asp-action="Approve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tbody>
                    <tr>
                        <td><label asp-for="Name">Name Category</label></td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td><label asp-for="User.Email">Store Manager Email</label></td>
                        <td>@Model.User.Email</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Approve" class="approve-button" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <input type="hidden" asp-for="RequestId" />
            <input type="hidden" asp-for="UserID"/>
            <input type="hidden" asp-for="IsApproved"/>
            <input type="hidden" asp-for="CreatedAt"/>
            <input type="hidden" asp-for="Name"/>
        </form>
    </div>
