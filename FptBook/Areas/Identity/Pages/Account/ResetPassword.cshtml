@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="background-lr">

    <div class="login-form-container">

        <form method="post">
            <h3>Reset Password</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />

            <span><label asp-for="Input.Email" class="form-label"></label></span>
            <input asp-for="Input.Email" class="box"  placeholder="Enter your email" id="" aria-required="true">
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <span><label asp-for="Input.Password" class="form-label"></label>  </span>
            <input asp-for="Input.Password" class ="box" placeholder="Enter your password" id="" aria-required="true">
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <span><label asp-for="Input.ConfirmPassword" class="form-label"></label>  </span>
            <input asp-for="Input.ConfirmPassword" class ="box" placeholder="Confirm your password" id="" aria-required="true">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <input id="submit" type="submit" value="Reset Password" class="btn">
        </form>
    </div>

</div>



@section CSS
{
    <link href="@Url.Content("~/css/login-register.css")" rel="stylesheet" type="text/css" />
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
