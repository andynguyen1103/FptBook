<form asp-action="Delete" asp-route-id="@Model.BookId">
    <div class="book-detail"> 
        <div class="col-md-4"><br><br>
            <img src="@Url.Content("~" + Model.ImageLink)" class="img-thumbnail" style="margin-left: 60px; object-fit: cover; width: 268px; height: 362px;"/>
        </div>
        <div class="table-container"> <br>
            <table>
                <thead>
                <tr>
                    <th class="header-cell">@Html.DisplayNameFor(model => model.Title)</th>
                    <td class="data-cell">@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <th class="header-cell">@Html.DisplayNameFor(model => model.Amount)</th>
                    <td class="data-cell">@Html.DisplayFor(model => model.Amount)</td>
                </tr>
                <tr>
                    <th class="header-cell">@Html.DisplayNameFor(model => model.Price)</th>
                    <td class="data-cell">@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <th class="header-cell">@Html.DisplayNameFor(model => model.Summary)</th>
                    <td class="data-cell">@Html.DisplayFor(model => model.Summary)</td>
                </tr>
                <tr>
                    <th class="header-cell">@Html.DisplayNameFor(model => model.CategoryId)</th>
                    <td class="data-cell">@Html.DisplayFor(model => model.CategoryId)</td>
                </tr>
                <tr>
                    <th class="header-cell">@Html.DisplayNameFor(model => model.Author.Name)</th>
                    <td class="data-cell">@Html.DisplayFor(model => model.Author.Name)</td>
                </tr>
                </thead>
            </table>
        </div>
    </div> <br><br>
    
    <div style="text-align: center;">
        <button type="submit" class="delete-button">Delete</button>
        <a class="cancel-button" asp-action="Index">Cancel</a>
    </div>
    
</form>


