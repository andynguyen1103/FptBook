@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<FptBook.Models.Book>

<h1>Manage Books</h1>
<a class="create-button" asp-action="Create">Create new book</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name)
                </td>
                <td>
                    <a class="detail-button" asp-action="Details" asp-route-id="@item.BookId">Details</a> 
                    <a class="edit-button" asp-action="Edit" asp-route-id="@item.BookId">Edit</a> 
                    <a class="delete-button" asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section CSS
{
    <link href="@Url.Content("~/css/store_manager-book.css")" rel="stylesheet" type="text/css" />
}