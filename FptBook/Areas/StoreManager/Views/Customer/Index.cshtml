@using Microsoft.IdentityModel.Tokens
@model FptBook.Areas.StoreManager.Models.CustomerListViewModel

@{
    
}
@section SearchBar
{
    @{
        @(await Html.PartialAsync("_StoreOwnerSearchBarPartial", Model))
    }
}

@{
    if (Model.Customers.IsNullOrEmpty())
    {
        <h2>Manage Users</h2>
        <div class="container">
            <h1>No Customer Available</h1>
            <p>System Error! The system couldn't find any customer's information matching your search criteria. Please try again later.</p> <br><br>
        </div>
        <style>
            .container {
                background-color: #fff;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
                max-width: 600px;
                margin: 0 auto;
            }
            
            h1 {
                font-size: 28px;
                text-align: center;
                margin-top: 0;
                color: #219150;
            }
            
            p {
                font-size: 20px;
                text-align: center;
                margin-top: 20px;
            }
        </style>
    }

    else
    {
        <h2>Manage Users</h2>
        <table class="table">
            <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Home Address
                </th>
                    
                <th>
                    Email
                </th>
                  
                <th>
                    Phone Number
                </th>
                    
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Customers) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeAddress)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                
                    <td>
                        @* <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                        <a class="detail-button" asp-area="StoreManager" asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    
}

@section CSS
{
    <link href="@Url.Content("~/css/store_manager-customer.css")" rel="stylesheet" type="text/css" />
}
